
export CC := ${CMAKE_C_COMPILER}
export CFLAGS := ${${PROJECT_NAME}_CFLAGS}

all:
ifeq ($(wildcard ${CMAKE_CURRENT_BINARY_DIR}/zlib),)	
	cp -a ${CMAKE_CURRENT_LIST_DIR}/zlib ${CMAKE_CURRENT_BINARY_DIR}/zlib
	cd ${CMAKE_CURRENT_BINARY_DIR}/zlib && $(SH) ./configure --static
	cd ${CMAKE_CURRENT_BINARY_DIR}/zlib && $(MAKE)
	mkdir -p ${CMAKE_LIBRARY_OUTPUT_DIRECTORY}
	cp ${CMAKE_CURRENT_BINARY_DIR}/zlib/libz.a ${CMAKE_LIBRARY_OUTPUT_DIRECTORY}/libz.a
else
	@echo "[${CMAKE_CURRENT_BINARY_DIR}/zlib] directory found, skipping build"
endif		
